{
  "name": "connect-hub",
  "version": "0.1.0",
  "description": "Unified integration, token, and proxy layer for Clancy Digital-Employees",
  "type": "module",
  "scripts": {
    "dev": "tsx watch src/server.ts",
    "build": "tsc",
    "start": "node dist/server.js",
    "test": "vitest",
    "test:coverage": "vitest --coverage",
    "lint": "eslint src --ext .ts",
